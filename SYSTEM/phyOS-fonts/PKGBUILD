# Maintainer: Arda Atci <arda@phytech.io>

pkgname=phyOS-fonts
pkgver=1.2
pkgrel=0
pkgdesc="PhyOS system fonts"
arch=(any)
depends=(fontconfig xorg-font-util)
conflicts=()
source=("git+https://github.com/FT-Labs/phyOS-fonts")
md5sums=('SKIP')

package() {
  cd "$pkgname"
  install -dm 755 "${pkgdir}"/usr/share/fonts/TTF
  install -dm 755 "${pkgdir}"/usr/share/fonts/OTF
  install -Dm644 *.ttf "$pkgdir"/usr/share/fonts/TTF
  install -Dm644 *.otf "$pkgdir"/usr/share/fonts/OTF
}
