# Maintainer: Arda Atci<arda@phytech.io>
pkgname=phyOS-xmenu
pkgver=1
pkgrel=1
pkgdesc="xmenu build for phyOS"
arch=(x86_64)
url="git://github.com/FT-Labs/xmenu-phyOS"
license=('MIT')
depends=('imlib2' 'libxft-bgra' 'libxinerama' 'freetype2' 'libxcb' 'fontconfig')
makedepends=('git' 'make')
provides=("xmenu")
conflicts=("xmenu")
options=('zipman')
source=('git+https://github.com/FT-Labs/phyOS-xmenu')
md5sums=('SKIP')

build() {
	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	make PREFIX=/usr/local/ MANPREFIX=/share/man/ DESTDIR="$pkgdir/" install
}
