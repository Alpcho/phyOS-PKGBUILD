# Maintainer: Arda Atci<arda@phytech.io>
pkgname=phyOS-dwm
pkgver=1.1
pkgrel=1
pkgdesc="dwm build for phyOS"
arch=(x86_64)
url="git://github.com/PhyTech-R0/dwm-phyOS"
license=('MIT')
depends=('libxcb' 'libxft-bgra' 'imlib2' 'libconfig')
makedepends=('git' 'make')
optdepends=('fonts-phyOS' 'dmenu-phyOS' 'st-phyOS')
provides=("dwm", "dwmblocks")
conflicts=("dwm", "dwmblocks")
options=('zipman')
source=('git+https://github.com/PhyTech-R0/dwm-phyOS')
md5sums=('SKIP')

build() {
	cd "$pkgname"
	make
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir/" install
}
