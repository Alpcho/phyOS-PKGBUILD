# Maintainer: Arda Atci<arda@phytech.io>
pkgname=phyOS-dwm
pkgver=1.1.2
pkgrel=0
pkgdesc="dwm build for phyOS"
arch=(x86_64)
url="https://github.com/PhyTech-R0/phyOS-dwm/"
license=('MIT')
depends=('libxcb' 'libxft-bgra' 'imlib2' 'libconfig')
makedepends=('git' 'make')
optdepends=('fonts-phyOS' 'dmenu-phyOS' 'st-phyOS')
provides=("dwm" "dwmblocks")
conflicts=("dwm" "dwmblocks")
options=('zipman')


prepare() {
  git clone $url --depth 1 -b $pkgver
}

build() {
	cd "$pkgname"
	make
}

package() {
    cd "$pkgname"
	make PREFIX=/usr DESTDIR="$pkgdir/" install
}
